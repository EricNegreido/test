
<div style="display: flex">
    <h1> Hello, Welcome {{ user.name}} </h1><a href='/carts/{{user.cart}}'><button> CARRITO </button></a>

    <div>
        CHAT
        <input id="chatBox">
        <p id="messageLogs"> </p>
    </div>

</div>
    <h2>Products list</h2>
    <div class="product-list">
        <div class="product-card">
        {{#each product}}
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <label for="quantityProduct_{{this._id}}"></label>
            <input id="quantityProduct_{{this._id}}" name="quantity" style="width: 30px;" type="number"> 
            <button userId={{user.cart}} productId={{this._id}}>Agregar al Carrito</button>
        {{/each}}

        </div>
    </div>
    
    <div class="pagination">
        </br>
        <a href="/api/sessions/logout"><button> Logout </button></a>
        </br>
        </br>

        {{#if hasPrevPage}}
            <a href="?page={{prevPage}}">Previous</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="?page={{nextPage}}">Next</a>
        {{/if}}
    </div>
